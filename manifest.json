{
  "name": "Color Picker",
  "description": "Advanced Eyedropper, Color Picker Chrome Extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "/images/color-picker-16.png",
    "32": "/images/color-picker-32.png",
    "48": "/images/color-picker-64.png"
  }
}
